@model List<Course>
@{
    ViewBag.Title = "RemCrsToDept";
}

<h2>RemCrsToDept</h2>

@if (Model.Count == 0)
{
    <p>No coursers in This Department </p>
    <div>
        @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-outline-secondary" })
    </div>
}
else
{
    using (Html.BeginForm())
    {

        foreach (var item in Model)
        {

            <div class="form-group form-check">
                <input type="checkbox" name="course" value="@item.crs_id">
                <label class="form-check-label">@item.crs_name</label>
            </div>
        }

        <input type="submit" value="Remove" class="btn btn-outline-danger" />

    }
}

